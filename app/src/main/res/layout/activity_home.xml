<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1E40AF">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="48dp"
        android:paddingBottom="16dp"
        android:paddingHorizontal="16dp"
        android:background="#1E40AF">

        <!-- Logo and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@mipmap/ic_launcher"
                android:layout_marginEnd="12dp"
                android:background="#FFFFFF"
                android:scaleType="centerInside"
                android:padding="8dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OneSmallStep"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overcome your fears"
                    android:textSize="14sp"
                    android:textColor="#BFDBFE" />

            </LinearLayout>

        </LinearLayout>

        <!-- Search Bar -->
        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:queryHint="Search phobias..."
            android:background="#FFFFFF"
            android:iconifiedByDefault="false"
            android:layout_marginBottom="16dp" />

        <!-- Filter Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/chipAll"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="All"
                android:textSize="12sp"
                android:textColor="#1E40AF"
                android:background="#FFFFFF"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:paddingHorizontal="16dp" />

            <Button
                android:id="@+id/chipCommon"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Common"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:background="#3730A3"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:paddingHorizontal="16dp" />

            <Button
                android:id="@+id/chipRare"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Specific"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:background="#3730A3"
                android:minWidth="0dp"
                android:paddingHorizontal="16dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F8FAFC">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Stats Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#3B82F6"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25+"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phobias"
                        android:textSize="12sp"
                        android:textColor="#DBEAFE" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DBEAFE"
                    android:layout_marginHorizontal="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 Levels"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Per Program"
                        android:textSize="12sp"
                        android:textColor="#DBEAFE" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DBEAFE"
                    android:layout_marginHorizontal="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Evidence"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Based"
                        android:textSize="12sp"
                        android:textColor="#DBEAFE" />

                </LinearLayout>

            </LinearLayout>

            <!-- Phobias Grid -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewPhobias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>